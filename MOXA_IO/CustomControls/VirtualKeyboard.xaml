                <Button Grid.Row="2" Grid.Column="2" Style="{DynamicResource styGlassButton}" Background="{DynamicResource NormalBackgroundBrush}" Foreground="{DynamicResource ResourceKey=NormalForegroundBrush}" BorderBrush="White" Content="d" FontSize="30" FontWeight="Bold" Name="keyboard_button27" Margin="2,2,2,2" Click="keyboard_button" />
